<div class="container">
    <div class="row mt-5 mb-5 justify-content-center">
        <div class="col-12 text-center">
            <h2>Registre-se</h2>
        </div>
    </div>
    <form method="POST">
        <div class="row justify-content-center">
            <div class="col-5">
                <input type="text" class="form-control mb-3" id="name" name="name" placeholder="Digite seu Email">
                <input type="email" class="form-control mb-3" id="email" name="email" placeholder="Digite seu Email novamente">
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-5">
                <input type="password" class="form-control mb-3" id="inputPassword" name="password" placeholder="Digite sua senha">
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-5">
                <button type="submit" class="btn btn-primary active" onclick="confirmar()">Registrar</button>
            </div>
        </div>
    </form>
</div>

